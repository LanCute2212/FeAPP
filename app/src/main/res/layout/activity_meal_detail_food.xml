<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header with Back Button and Meal Type -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:background="@drawable/circle_bg_light"
                    android:padding="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#333333" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/meal_type_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:minHeight="0dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxStrokeColor="#E0E0E0"
                    app:endIconMode="dropdown_menu"
                    app:endIconTint="#666666"
                    app:startIconDrawable="@null"
                    app:helperTextEnabled="false"
                    app:errorEnabled="false"
                    app:layout_constraintStart_toEndOf="@id/back_button"
                    app:layout_constraintTop_toTopOf="@id/back_button"
                    app:layout_constraintBottom_toBottomOf="@id/back_button"
                    app:layout_constraintEnd_toStartOf="@id/favorite_button"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:elevation="0dp">

                    <AutoCompleteTextView
                        android:id="@+id/meal_type"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="40dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|start"
                        android:inputType="none"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:ellipsize="none"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/favorite_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_heart"
                    android:background="@drawable/circle_bg_light"
                    android:padding="8dp"
                    app:layout_constraintEnd_toStartOf="@id/more_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#333333"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/more_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_more_vertical"
                    android:background="@drawable/circle_bg_light"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#333333" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Food Illustration -->
            <FrameLayout
                android:id="@+id/food_illustration_container"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="8dp"
                android:background="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/header">

                <ImageView
                    android:id="@+id/food_illustration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_meal"
                    android:padding="40dp" />

            </FrameLayout>

            <!-- Food Name -->
            <TextView
                android:id="@+id/food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="H"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#333333"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/food_illustration_container" />

            <!-- Main Content Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/content_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="0dp"
                android:background="@drawable/card_top_rounded_background"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/food_name">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="24dp">

                    <!-- Information Source -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_lightning"
                            android:tint="#4CAF50"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Số liệu được lấy từ Minh Hoàng"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Serving Size Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kích thước khẩu phần"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:hint=""
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxStrokeColor="#E0E0E0"
                            app:boxStrokeWidth="1dp"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/serving_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:text="1"
                                android:padding="12dp"
                                android:gravity="center"
                                android:minHeight="48dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint=""
                            android:layout_marginStart="12dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                    app:boxStrokeColor="#E0E0E0"
                    app:boxStrokeWidth="1dp"
                    app:endIconMode="dropdown_menu"
                    app:endIconTint="#666666"
                            app:hintEnabled="false">

                            <AutoCompleteTextView
                                android:id="@+id/serving_unit"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="40dp"
                                android:background="@android:color/transparent"
                                android:clickable="true"
                                android:focusable="false"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center_vertical|start"
                                android:inputType="none"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:text="Khẩu phần (50g)" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Nutritional Value Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá trị dinh dưỡng"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Segmented Circular Progress with Text Overlay -->
                        <FrameLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp">

                            <com.example.caloriesapp.view.SegmentedCircularProgressView
                                android:id="@+id/calorie_progress"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/calorie_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="170 Kcal"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="#333333"
                                android:textSize="18sp" />

                        </FrameLayout>

                        <!-- Nutrient Breakdown -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <!-- Carbs -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="#4CAF50"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/carbs_value"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Carbs: 10.0g"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/carbs_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="33%"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="#666666"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <!-- Protein -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="#F44336"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/protein_value"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Chất đạm: 10.0g"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/protein_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="33%"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="#666666"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <!-- Fat -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="#FF9800"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/fat_value"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Chất béo: 10.0g"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="#333333"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/fat_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="33%"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textColor="#666666"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Full Nutrition Link -->
                    <TextView
                        android:id="@+id/full_nutrition_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem thông tin dinh dưỡng đầy đủ ↓"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:padding="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Add Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_to_meal_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="0dp"
                android:layout_marginHorizontal="0dp"
                android:layout_marginBottom="0dp"
                android:text="Thêm vào bữa trưa"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semi_bold"
                app:backgroundTint="#4CAF50"
                app:cornerRadius="0dp"
                app:layout_constraintTop_toBottomOf="@id/content_card"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


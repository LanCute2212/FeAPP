<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_meal"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_bg_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/food_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/food_image"
            app:layout_constraintTop_toTopOf="@id/food_image"
            app:layout_constraintEnd_toStartOf="@id/delete_button"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/circle_bg_light"
            android:padding="4dp"
            android:rotation="45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/nutrition_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="100g, 389 kcal"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/food_name"
            app:layout_constraintTop_toBottomOf="@id/food_name"
            app:layout_constraintEnd_toStartOf="@id/delete_button"
            android:layout_marginTop="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnConfirm"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back" />

            <!-- Header: Activity list + Add activity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Activity List"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Activity"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_button"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Label + EditText: Activity Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="Activity Name"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />

            <EditText
                android:id="@+id/et_activity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter activity name"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:textColorHint="#4CAF50"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />

            <!-- Label + EditText: Energy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:text="Energy"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />

            <EditText
                android:id="@+id/et_energy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kcal"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:textColorHint="#4CAF50"
                android:inputType="number"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />

            <!-- Label + EditText: Duration -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:text="Duration"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />

            <EditText
                android:id="@+id/et_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minutes"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:textColorHint="#4CAF50"
                android:inputType="number"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />

            <!-- Radio Buttons -->
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add to activity list"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to today's activities"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>
    </ScrollView>

    <!-- Confirm button -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:textColor="@color/white"
        android:background="@drawable/bg_button"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

</RelativeLayout>

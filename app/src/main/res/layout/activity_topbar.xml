<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBarLayout chứa thanh trên -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Light">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/circle_bg_light"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Text ngày + chào -->
            <TextView
                android:id="@+id/header_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TODAY, 7 OCTOBER\nHello, let's get started!"
                android:textSize="14sp"
                android:textColor="#2B2B2B"
                android:lineSpacingExtra="2dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/avatar"
                app:layout_constraintTop_toTopOf="@id/avatar"
                app:layout_constraintEnd_toStartOf="@id/icon_bell"
                app:layout_constraintBottom_toBottomOf="@id/avatar"
                android:gravity="start" />

            <!-- Icon chuông -->
            <ImageView
                android:id="@+id/icon_bell"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_bell"
                app:layout_constraintTop_toTopOf="@id/avatar"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- Thanh ngày (dynamic dates) -->
            <LinearLayout
                android:id="@+id/days_row"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp">

                <!-- Dynamic day TextViews will be added here programmatically -->
                <!-- Day 1 -->
                <TextView
                    android:id="@+id/day_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#0a0a0a"
                    android:minWidth="32dp"
                    android:gravity="center" />

                <!-- Day 2 -->
                <TextView
                    android:id="@+id/day_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#0a0a0a"
                    android:minWidth="32dp"
                    android:gravity="center" />

                <!-- Day 3 -->
                <TextView
                    android:id="@+id/day_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#0a0a0a"
                    android:minWidth="32dp"
                    android:gravity="center" />

                <!-- Day 4 -->
                <TextView
                    android:id="@+id/day_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#0a0a0a"
                    android:minWidth="32dp"
                    android:gravity="center" />

                <!-- Day 5 -->
                <TextView
                    android:id="@+id/day_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#0a0a0a"
                    android:minWidth="32dp"
                    android:gravity="center" />

                <!-- Day 6 -->
                <TextView
                    android:id="@+id/day_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#0a0a0a"
                    android:minWidth="32dp"
                    android:gravity="center" />

                <!-- Day 7 -->
                <TextView
                    android:id="@+id/day_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#0a0a0a"
                    android:minWidth="32dp"
                    android:gravity="center"
                    android:layout_marginEnd="30dp" />

                <!-- Dấu gạch dọc (vertical divider) -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0" />

                <!-- Icon lịch -->
                <ImageView
                    android:id="@+id/icon_calendar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_calender"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toBottomOf="@id/icon_bell"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung bên dưới cuộn được -->

    <!-- Bottom Bar (mirroring top bar structure, always visible) -->
    <!-- Bottom Bar -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Gắn phần layout phía dưới (calo, nhật ký ăn uống,...) ở đây -->
        <include layout="@layout/activity_homepage" />

    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Top Bar with Back Arrow and Title -->
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Theo dõi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <!-- Calendar Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Month Navigation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/btn_prev_month"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_back"
                        android:contentDescription="Previous Month"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:id="@+id/tv_month_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tháng 11 2025"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_bold" />

                    <ImageView
                        android:id="@+id/btn_next_month"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_forward"
                        android:contentDescription="Next Month"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- Weekday Headers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="T2"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="T3"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="T4"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="T5"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="T6"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="T7"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CN"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Calendar Grid Container -->
                <android.widget.GridLayout
                    android:id="@+id/calendar_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:rowCount="6">

                    <!-- Calendar days will be added programmatically -->

                </android.widget.GridLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Daily Summary Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/ic_circle"
                        android:backgroundTint="#4CAF50"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số ngày ăn đạt khuyến nghị"
                        android:textSize="14sp"
                        android:textColor="#111111" />

                    <TextView
                        android:id="@+id/tv_days_recommended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ngày"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/ic_circle"
                        android:backgroundTint="#FF9800"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số ngày ăn dưới BMR"
                        android:textSize="14sp"
                        android:textColor="#111111" />

                    <TextView
                        android:id="@+id/tv_days_below_bmr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 ngày"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/ic_circle"
                        android:backgroundTint="#F44336"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số ngày ăn quá lượng cần nạp"
                        android:textSize="14sp"
                        android:textColor="#111111" />

                    <TextView
                        android:id="@+id/tv_days_over_intake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ngày"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F44336" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Calorie Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_statistics_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thống kê lượng Calo trong tháng 11/2025"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/poppins_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lightning"
                        android:contentDescription="lightning"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng Calo cần nạp"
                        android:textSize="14sp"
                        android:textColor="#111111" />

                    <TextView
                        android:id="@+id/tv_total_calories_needed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="106.050 kcal"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lightning"
                        android:contentDescription="lightning"
                        android:tint="#FF9800"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng Calo đã nạp"
                        android:textSize="14sp"
                        android:textColor="#111111" />

                    <TextView
                        android:id="@+id/tv_total_calories_consumed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="170 kcal"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lightning"
                        android:contentDescription="lightning"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lượng Calo cần tăng thêm"
                        android:textSize="14sp"
                        android:textColor="#111111" />

                    <TextView
                        android:id="@+id/tv_calories_to_increase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.250 kcal"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lightning"
                        android:contentDescription="lightning"
                        android:tint="#FF9800"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lượng Calo đã tăng thêm"
                        android:textSize="14sp"
                        android:textColor="#111111" />

                    <TextView
                        android:id="@+id/tv_calories_increased"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-48.730 kcal"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

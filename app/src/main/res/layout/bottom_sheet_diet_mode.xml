<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="32dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <!-- Handle Bar -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_handle_bar" />

        <!-- Header: Title and Close Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="28dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chọn chế độ ăn"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#111111"
                android:letterSpacing="0.01"
                android:fontFamily="@font/poppins_bold" />

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:contentDescription="Close"
                app:tint="#757575" />

        </LinearLayout>

        <!-- Macronutrient Percentage Pickers Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tỷ lệ dinh dưỡng đa lượng"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/poppins_bold" />

                <!-- Percentage Pickers Group with center selector band -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/group_macros"
                    android:background="@drawable/bg_percentage_container"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <!-- Percentage Pickers Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:gravity="center"
                        android:baselineAligned="false">

                    <!-- Carbs Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbs"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/poppins_bold" />

                        <NumberPicker
                            android:id="@+id/np_carbs"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <!-- Protein Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chất đạm"
                            android:textColor="#F44336"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/poppins_bold" />

                        <NumberPicker
                            android:id="@+id/np_protein"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <!-- Fat Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chất béo"
                            android:textColor="#FF9800"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/poppins_bold" />

                        <NumberPicker
                            android:id="@+id/np_fat"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Total Percentage Display Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_total_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="% Tổng"
                        android:textColor="#111111"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Các chất dinh dưỡng đa lượng phải tổng cộng bằng 100%"
                        android:textColor="#757575"
                        android:textSize="13sp"
                        android:lineSpacingMultiplier="1.3"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_total_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="#4CAF50"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins_bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Diet Mode Selection Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn chế độ ăn"
            android:textColor="#111111"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_bold" />

        <!-- Diet Modes Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_diet_modes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:nestedScrollingEnabled="false" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save_diet_mode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Lưu chế độ ăn"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/btn_save_diet_mode"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            android:fontFamily="@font/poppins_bold"
            android:textAllCaps="false"
            android:letterSpacing="0.01" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

  <TextView
    android:id="@+id/tv_welcome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="44dp"
    android:fontFamily="@font/poppins_bold"
    android:gravity="center"
    android:text="@string/welcome_aboard"
    android:textColor="#000000"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  <ImageView
    android:id="@+id/logoImage"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_marginTop="20dp"
    android:contentDescription="@string/app_name"
    android:src="@drawable/ic_logo"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_welcome" />

  <EditText
    android:id="@+id/etUsername"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/edittext_background"
    android:hint="@string/username"
    android:padding="10dp"
    android:textSize="12sp"
    android:fontFamily="@font/poppins_regular"
    android:textColor="#000000"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/logoImage"
    app:layout_constraintWidth_percent="0.85" />

  <EditText
    android:id="@+id/etEmail"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    android:padding="10dp"
    android:background="@drawable/edittext_background"
    android:hint="@string/enter_your_email"
    android:textColor="#000"
    android:textSize="12sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.507"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/etUsername"
    app:layout_constraintWidth_percent="0.85" />
  <EditText
    android:id="@+id/etPhone"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginTop="12dp"
    android:padding="10dp"
    android:textSize="12sp"
    android:fontFamily="@font/poppins_regular"
    android:background="@drawable/edittext_background"
    android:hint="@string/enter_your_phone_number"
    android:inputType="phone"
    android:textColor="#000"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.507"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/etEmail"
    app:layout_constraintWidth_percent="0.85" />
  <EditText
    android:id="@+id/etPassword"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginTop="16dp"
    android:padding="10dp"
    android:textSize="12sp"
    android:fontFamily="@font/poppins_regular"
    android:background="@drawable/edittext_background"
    android:hint="@string/enter_your_password"
    android:inputType="textPassword"
    android:textColor="#000"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.492"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/etPhone"
    app:layout_constraintWidth_percent="0.85" />
  <com.google.android.material.button.MaterialButton
    android:id="@+id/btnRegister"
    style="@style/RoundedButton"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:backgroundTint="@color/loginColor"
    android:fontFamily="@font/poppins_semi_bold"
    android:text="@string/register"
    android:textColor="@color/white"
    android:textSize="30px"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.492"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/etPassword"
    app:layout_constraintVertical_bias="0.041"
    app:layout_constraintWidth_percent="0.85" />
  <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/already_text"
        android:textColor="#000000"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRegister" />

      <LinearLayout
        android:id="@+id/or_divider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLogin"
        app:layout_constraintWidth_percent="0.85">

        <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"
          android:background="#000000" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:fontFamily="@font/poppins_regular"
          android:text="@string/or_text"
          android:textColor="#000000"
          android:textSize="13sp" />

        <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="1"
          android:background="#000000" />

      </LinearLayout>

      <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_facebook_login"
        style="@style/RoundedButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/bg_button_facebook"
        android:drawablePadding="12dp"
        app:icon="@drawable/ic_facebook"
        app:iconGravity="textStart"
        app:iconTint="@null"

        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:text="@string/login_with_facebook"
        android:textColor="@color/white"
        android:textSize="30px"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/or_divider"
        app:layout_constraintWidth_percent="0.85" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_google_login"
        style="@style/RoundedButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/bg_button_google"
        app:backgroundTint="@color/white"

        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconTint="@null"
        app:iconSize="24dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:text="@string/login_with_google"
        android:textColor="#99000000"
        android:textSize="30px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_facebook_login"
        app:layout_constraintWidth_percent="0.85" />

</androidx.constraintlayout.widget.ConstraintLayout>


